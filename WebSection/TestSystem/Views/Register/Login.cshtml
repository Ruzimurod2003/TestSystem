@{
    Layout = "_LayoutRegister";
}
@model RegisterLoginViewModel;
<form method="post" asp-action="Login" asp-controller="Register">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Email" class="col-sm-2 col-form-label">Email:</label>
        <div class="col-sm-10">
            <input asp-for="Email" type="text" class="form-control-plaintext" placeholder="Please enter you email...">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="col-sm-2 col-form-label">Last name:</label>
        <div class="col-sm-10">
            <input asp-for="Password" type="password" class="form-control-plaintext" placeholder="Please enter you password...">
        </div>
    </div>
    <div class="form-group">
        <input class="form-control" type="checkbox" asp-for="RememberMe">
    </div>
    <button type="submit" class="container btn btn-primary">Submit</button>
</form>
