@model RegisterIndexViewModel
@{
    Layout = "_LayoutRegister";
}
<form method="post" asp-action="Index" asp-controller="Register">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="FirstName" class="col-sm-2 col-form-label">First name:</label>
        <div class="col-sm-10">
            <input asp-for="FirstName" type="text" class="form-control-plaintext" placeholder="Enter First name">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="col-sm-2 col-form-label">Last name:</label>
        <div class="col-sm-10">
            <input asp-for="LastName" type="text" class="form-control-plaintext" placeholder="Enter Last name">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Email" for="exampleInputEmail1" class="form-label mt-4">Email address</label>
        <input type="email" class="form-control" asp-for="Email" aria-describedby="emailHelp" placeholder="Enter email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="form-label mt-4">Password</label>
        <input type="password" class="form-control" asp-for="Password" placeholder="Password">
    </div>
    <div class="form-group">
        <label asp-for="Birth" class="form-label mt-4">Default file input example</label>
        <input class="form-control" type="date" asp-for="Birth">
    </div>
    <button type="submit" class="container btn btn-primary">Submit</button>
</form>