@model HomeUserViewModel;
@{
    List<string> roles = new List<string>
    {
    "User",
    "Administrator",
    "TestCreator"    
    };
}
<div class="container card text-white bg-dark mb-3" style="max-width: 50rem;">
    <div class="card-header">@Model.FullName</div>
    <div class="card-body">
        <form method="post" asp-action="User" asp-controller="Home">
            <input asp-for="UserId" type="hidden"/>
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-2 col-form-label">Email:</label>
                <div class="col-sm-10">
                    <input asp-for="Email" type="text" class="form-control-plaintext" disabled>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Birth" class="col-sm-2 col-form-label">Birth:</label>
                <div class="col-sm-10">
                    <input class="form-control-plaintext" type="text" asp-for="Birth" disabled>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="CreatedDate" class="col-sm-2 col-form-label">Created date:</label>
                <div class="col-sm-10">
                    <input class="form-control-plaintext" type="text" asp-for="CreatedDate" disabled>
                </div>
            </div>
            <div class="form-group row">
                <label for="exampleSelect1" class="col-sm-2 col-form-label">Role:</label>
                <div class="col-sm-10">
                    <select asp-for="RoleString" class="form-select" id="exampleSelect1">
                        <option>@Model.RoleString</option>
                        @foreach (string role in roles)
                        {
                            if (role != Model.RoleString)
                            {
                                <option>@role</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Change</button>
            <button type="submit" asp-action="Index" asp-controller="Home" class="btn btn-danger">Back</button>
        </form>
    </div>
</div>