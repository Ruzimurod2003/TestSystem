@model List<HomeIndexViewModel>;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="card">
    <h1>Heading 1</h1>
    <h2>Heading 2</h2>
    <h3>Heading 3</h3>
    <h4>Heading 4</h4>
    <h5>Heading 5</h5>
    <h6>Heading 6</h6>
    <h3>
        Heading
        <small class="text-muted">with muted text</small>
    </h3>
    <p class="lead">Vivamus sagittis lacus vel augue laoreet rutrum faucibus dolor auctor.</p>
</div>
<div class="d-grid gap-2">
    <button class="btn btn-lg btn-primary" type="button">Block button</button>
    <button class="btn btn-lg btn-primary" type="button">Block button</button>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Number</th>
            <th scope="col">FullName</th>
            <th scope="col">Email</th>
            <th scope="col">Birth</th>
            <th scope="col">Role</th>
            <th scope="col">Created</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (HomeIndexViewModel user in Model)
        {
            <tr class="table-dark">
                <th scope="row">@user.Index</th>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Birth</td>
                <td>@user.RoleString</td>
                <td>@user.CreatedDate</td>
                @if (user.RoleString == "User")
                {
                    <td class="text-primary"><a asp-action="User" asp-controller="Home" asp-route-id="@user.UserId"><i class="bi bi-gear"></i></a></td>
                }
                else if (user.RoleString == "Administrator")
                {
                    <td class="text-info"><a asp-action="User" asp-controller="Home" asp-route-id="@user.UserId"><i class="bi bi-gear"></i></a></td>
                }
                else if (user.RoleString == "Owner")
                {
                    <td class="text-danger"><a asp-action="User" asp-controller="Home" asp-route-id="@user.UserId"><i class="bi bi-gear"></i></a></td>
                }
                else if (user.RoleString == "TestCreator")
                {
                    <td class="text-light"><a asp-action="User" asp-controller="Home" asp-route-id="@user.UserId"><i class="bi bi-gear"></i></a></td>
                }
            </tr>
        }
    </tbody>
</table>